function main(event){
	//alert("J-3 avant que je me tire une balle");
	var rects = [];
	var i = 2;
	for (i ; i >0 ; i--){
		var rect = randRect();
		rects.push(rect);
		factory("div", rect.x, rect.y, rect.w, rect.h);
	}

	console.log(rect);
